<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="GestCo"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="48sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="183dp"
            android:layout_marginTop="28dp"
            app:srcCompat="@drawable/cookerhires" />

        <EditText
            android:id="@+id/editTextUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="32dp"
            android:ems="10"
            android:hint="User Name"
            android:maxLength="20"
            android:inputType="text" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:ems="10"
            android:hint="Password"
            android:maxLength="20"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btConectar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="#00BCD4"
            android:onClick="onClick"
            android:text="@string/conectar"
            android:textColorHighlight="#00BCD4"
            android:textColorLink="@color/design_default_color_secondary"
            android:textSize="20sp"
            app:rippleColor="#A2A4A4" />

        <Button
            android:id="@+id/btCrear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="#5C888A8A"
            android:onClick="onClick"
            android:text="@string/crearCuenta"
            android:textColorHighlight="#00BCD4"
            android:textColorLink="@color/design_default_color_secondary"
            android:textSize="20sp"
            app:rippleColor="#00BCD4" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>